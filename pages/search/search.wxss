page {
  height: 50%;
}
/* 主容器样式 */
.container {
  position: relative;  /* 设置为相对定位 */
  padding: 0;         /* 去除默认内边距 */
}

/* 地图视图样式 */
.map-view {
  width: 100%;        /* 宽度100% */
  height: 300px;      /* 高度可以根据需要调整 */
}

/* 搜索容器样式 */
.search-container {
  position: absolute;  /* 设置为绝对定位 */
  width: calc(100% - 40px);  /* 设置宽度 */
  background-color: #fafafa;  /* 背景颜色及透明度 */
  border-radius: 10px;  /* 圆角 */
  padding: 20px;  /* 内边距 */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);  /* 阴影效果 */
  height: 100%;  /* 设置高度为屏幕的一半 */
  bottom: 0;  /* 初始位置在屏幕底部 */
}

/* 位置按钮样式 */
.location-btn {
  width: 70%;  /* 按钮宽度为100% */
  padding: 15px; /* 按钮内边距 */
  background-color: #fafafa; /* 背景颜色 */
  color: rgb(0, 0, 0); /* 字体颜色 */
  border: none; /* 去除边框 */
  border-radius: 4px; /* 圆角 */
  font-size: 16px; /* 字体大小 */
  margin-bottom: 10px; /* 按钮之间的间距 */
}

.arrow-container {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  margin: 10px 0; /* 上下间距 */
  /* border: none; 去除边框 */
  /* background: transparent; 透明背景 */
  border: 0px solid transparent; /* 设置透明边框 */
}

.arrow-button {
  height: 40px;
  /* background: transparent; 透明背景 */
  /* border: none; /* 去除边框 */
  padding: 0; /* 去掉内边距 */
  cursor: pointer; /* 鼠标指针样式 */
  border: 0px solid transparent; /* 设置透明边框 */
}

.arrow {
  width: 30px; /* 设置箭头图标的宽度 */
  height: 40px; /* 设置箭头图标的高度 */
  border: none; /* 去除边框 */
  border: 0px solid transparent; /* 设置透明边框 */
}





/* 搜索按钮样式 */
.search-btn {
  margin-top: 10px;  /* 上边距 */
  padding: 5px;
  background-color: #4a83ec;  /* 背景颜色 */
  color: white;  /* 字体颜色 */
  border-radius: 10px;  /* 圆角 */
  border: none;  /* 去除边框 */
  font-size: 16px;  /* 字体大小 */
  width: 100px;
  height: 50px;
}


.result-item:last-child {
  border-bottom: none;
}
